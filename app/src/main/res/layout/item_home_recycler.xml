<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.marvelcomics.ui.home.HomeViewModel" />
        <variable
            name="adapter"
            type="com.example.marvelcomics.ui.base.BaseAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_name"
            android:text="carchter"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical|start"
            android:layout_marginTop="@dimen/margin2x"
            android:layout_marginStart="@dimen/margin1x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/show_more"
            android:text="show more"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="bottom|end"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/margin1x"
            android:layout_marginEnd="@dimen/margin2x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_trending_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:adapter="@{adapter}"
            app:items="@{viewModel.character.toData()}"
            android:layout_margin="@dimen/margin2x"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_name"
            tools:listitem="@layout/item_home" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>